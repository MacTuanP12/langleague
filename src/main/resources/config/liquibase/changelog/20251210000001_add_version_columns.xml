<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!--
        Add version columns for optimistic locking to prevent race conditions
        on concurrent updates (e.g., when users spam submit exercises or update progress)
    -->
    <changeSet id="20251210000001-1" author="system">
        <preConditions onFail="MARK_RAN">
            <not><columnExists tableName="app_user" columnName="version"/></not>
        </preConditions>
        <addColumn tableName="app_user">
            <column name="version" type="bigint" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="20251210000001-2" author="system">
        <preConditions onFail="MARK_RAN">
            <not><columnExists tableName="chapter_progress" columnName="version"/></not>
        </preConditions>
        <addColumn tableName="chapter_progress">
            <column name="version" type="bigint" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="20251210000001-3" author="system">
        <preConditions onFail="MARK_RAN">
            <not><columnExists tableName="exercise_result" columnName="version"/></not>
        </preConditions>
        <addColumn tableName="exercise_result">
            <column name="version" type="bigint" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>

